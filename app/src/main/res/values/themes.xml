<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyPocApp" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_700</item>

        <!-- ActionBar style -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Status bar color (for Android 5.0 and above) -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

<!--        &lt;!&ndash; specify enter and exit transitions &ndash;&gt;-->
<!--        <item name="android:windowEnterTransition">@transition/fade</item>-->
<!--        <item name="android:windowExitTransition">@transition/fade</item>-->
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/purple_700</item>
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>
</resources>